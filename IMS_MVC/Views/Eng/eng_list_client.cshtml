@model IEnumerable<IMS_MVC.Models.Client>

@{
    ViewBag.Title = "Clients List";
}

<h2>Clients List</h2>

<p>
    @Html.ActionLink("Create New", "eng_create_client")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descriptive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DistrictId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriptive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistrictId)
            </td>
            <td>
                @Html.ActionLink("Edit", "eng_detail_client", new { id = item.Id })
            </td>
        </tr>
    }

</table>