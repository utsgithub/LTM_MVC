@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Intervention Monitoring System</h1>
    <p class="lead">
        Welcome to the Intervention Monitoring System exclusively developed for the wonderful people at ENET Care. Get started now and start some interventions right away.
    </p>
</div>
<div class="row">
    <div class="col-md-3">
        <div class="thumbnail">
            <img src="~/Images/User-Executive-Green-icon.png" alt="Site Engineer">
            <div class="caption">
                <h3>Site Engineer</h3>
                <p>
                    @Html.ActionLink("Go to Dashboard", "index", "eng")
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="thumbnail">
            <img src="~/Images/User-Administrator-Blue-icon.png" alt="Manager">
            <div class="caption">
                <h3>Manager</h3>
                <p>
                    @Html.ActionLink("Go to Dashboard", "index", "man")
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="thumbnail">
            <img src="~/Images/Office-Girl-icon.png" alt="Accountant">
            <div class="caption">
                <h3>Accountant</h3>
                <p>
                    @Html.ActionLink("Go to Dashboard", "index", "acc")
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
            <div class="thumbnail">
                <img src="~/Images/icon-account-change-password.png" style="height: 256px;" alt="Change Password">
                <div class="caption">
                    <h3>Change Password</h3>
                    <p>
                        @Html.ActionLink("Go to Password Change Page", "ChangePassword", "Manage")
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="thumbnail">
                <img src="~/Images/686932-signin_login_enter_entry_sign_log_in-512.png" style="height: 256px;" alt="Change Password">
                <div class="caption">
                    <h3>Login</h3>
                    <p>
                        <a href="~/Account/Login">Go to Login Page</a>
                    </p>
                </div>
            </div>
        }
</div>

</div>
